pipeline {
  agent{
    label 'NODE_JS_BUILDER'
  }

  options {
    timeout(time: 1, unit: 'HOURS')
    timestamps()
    ansiColor('xterm')
  }

  stages {
    stage('Install') {
      steps {
        withCredentials([
          string(credentialsId: 'NPM_TOKEN', variable: 'NPM_TOKEN')
        ]) {
          sh 'echo \'//registry.npmjs.org/:_authToken=${NPM_TOKEN}\' > $HOME/.npmrc'
          sh '''#!/bin/bash -ex
          source ~/.nvm/nvm.sh
          nvm install 7
          nvm use v7
          npm install
          rm -f $HOME/.npmrc
          '''
        }
      }
    }

    stage('Test') {
      steps {
        echo "Starting Tap Tests"
        withCredentials([
          string(credentialsId: 'ddfd04fb-e00a-4df0-9250-9a7cb37bce0e', variable: 'CISCOSPARK_CLIENT_SECRET'),
          usernamePassword(credentialsId: 'SAUCE_LABS_VALIDATED_MERGE_CREDENTIALS', passwordVariable: 'SAUCE_ACCESS_KEY', usernameVariable: 'SAUCE_USERNAME'),
        ]) {

          retry(2){
            sh '''#!/bin/bash -ex
            source ~/.nvm/nvm.sh
            nvm use v7
            CISCOSPARK_CLIENT_ID=C873b64d70536ed26df6d5f81e01dafccbd0a0af2e25323f7f69c7fe46a7be340 SAUCE=true npm run test:tap
            '''
          }
        }
      echo "Finished with Tap Tests"
      }
    }
  }

  post {
    failure {
      echo "Finished with Tap Tests"
      //emailext body: '<p>Spark-js-sdk--react-widget--tap build number $BUILD_NUMBER has failed. For detailed information, please refer to $BUILD_URL</p><pre>${BUILD_LOG_EXCERPT, start="\\b(Starting)\\b", end="\\b(Finished)\\b"}</pre>', subject: 'Spark-js-sdk--react-widget--tap Failure', to: 'spark-js-sdk-gating-pipeline-email.94d222a7@ciscospark.pagerduty.com'
      emailext body: '<p>Spark-js-sdk--react-widget--tap build number $BUILD_NUMBER has failed. For detailed information, please refer to $BUILD_URL</p><pre>${BUILD_LOG_EXCERPT, start="\\b(Starting)\\b", end="\\b(Finished)\\b"}</pre>', subject: 'Spark-js-sdk--react-widget--tap Failure', to: 'alearche@cisco.com'
    }
  }
}
